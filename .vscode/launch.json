{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Pooling",
            "type": "debugpy",
            "request": "launch",
            "module": "shap_adapool.pooling_strategies.${input:strategyModule}",
            "justMyCode": false
        },
        {
            "name": "Open Canada Dataset: class distribution histogram",
            "type": "debugpy",
            "request": "launch",
            "module": "shap_adapool.datasets.open_canada.class_distribution",
            "justMyCode": true
        },
        {
            "name": "Open Canada Dataset: clean the dataset",
            "type": "debugpy",
            "request": "launch",
            "module": "shap_adapool.datasets.open_canada.cleaning",
            "justMyCode": true
        },
        {
            "name": "Open Canada Dataset: post-cleaning class distribution histogram",
            "type": "debugpy",
            "request": "launch",
            "module": "shap_adapool.datasets.open_canada.class_distribution",
            "args": [
                "--post-cleaning"
            ],
            "justMyCode": true
        },
        {
            "name": "Open Canada Dataset: create HuggingFace dataset",
            "type": "debugpy",
            "request": "launch",
            "module": "shap_adapool.datasets.open_canada.hf_dataset",
            "justMyCode": true
        },
        {
            "name": "Open Canada Dataset: fine-tune Mistral",
            "type": "debugpy",
            "request": "launch",
            "module": "shap_adapool.classifier.mistral.fine_tune",
            "justMyCode": true
        },
        {
            "name": "Open Canada Dataset: explain Mistral",
            "type": "debugpy",
            "request": "launch",
            "module": "shap_adapool.classifier.mistral.explain",
            "args": ["--limit", "100"],
            "justMyCode": false
        },
        {
            "name": "AG News Dataset: class distribution histogram",
            "type": "debugpy",
            "request": "launch",
            "module": "shap_adapool.datasets.ag_news.class_distribution",
            "justMyCode": true
        },
        {
            "name": "AG News Dataset: clean the dataset",
            "type": "debugpy",
            "request": "launch",
            "module": "shap_adapool.datasets.ag_news.cleaning",
            "justMyCode": true
        },
        {
            "name": "AG News Dataset: create HuggingFace dataset",
            "type": "debugpy",
            "request": "launch",
            "module": "shap_adapool.datasets.ag_news.hf_dataset",
            "justMyCode": true
        },
        {
            "name": "AG News Dataset: fine-tune Mistral",
            "type": "debugpy",
            "request": "launch",
            "module": "shap_adapool.classifier.mistral.fine_tune",
            "args": ["--dataset", "ag_news"],
            "justMyCode": false
        },
        {
            "name": "AG News Dataset: explain Mistral",
            "type": "debugpy",
            "request": "launch",
            "module": "shap_adapool.classifier.mistral.explain",
            "args": ["--dataset", "ag_news", "--limit", "100"],
            "justMyCode": false
        },
        {
            "name": "Companies Dataset: clean the dataset",
            "type": "debugpy",
            "request": "launch",
            "module": "shap_adapool.datasets.companies.cleaning",
            "justMyCode": true
        },
        {
            "name": "Companies Dataset: create HuggingFace dataset",
            "type": "debugpy",
            "request": "launch",
            "module": "shap_adapool.datasets.companies.hf_dataset",
            "justMyCode": true
        },
        {
            "name": "Companies Dataset: fine-tune Mistral",
            "type": "debugpy",
            "request": "launch",
            "module": "shap_adapool.classifier.mistral.fine_tune",
            "args": [
                "--dataset", "companies",
                "--model-id", "mistralai/Mistral-7B-v0.1"
            ],
            "env": {
                "VARIANT": "public",
                "CUDA_VISIBLE_DEVICES": "1",
            },
            "justMyCode": false
        },
        {
            "name": "Companies Dataset: explain Mistral",
            "type": "debugpy",
            "request": "launch",
            "module": "shap_adapool.classifier.mistral.explain",
            "args": ["--dataset", "companies", "--limit", "100"],
            "justMyCode": false
        },
        {
            "name": "Mock annotator",
            "type": "debugpy",
            "request": "launch",
            "module": "shap_adapool.classifier.mock.explain",
            "args": ["--dataset", "open_canada", "--limit", "10"],
            "justMyCode": false
        },
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "strategyModule",
            "description": "Pick an option:",
            "options": [
                "k_word_pooling",
                "sentence_pooling",
                "syntax_tree_pooling"
            ],
            "default": "foo"
        },
    ]
}